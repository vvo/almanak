{
  "version": "0.0.2",
  "name": "almanak",
  "scripts": {
    "dev": "vite",
    "build": "tsup src/components/Calendar.tsx --dts --legacy-output --target=es2020",
    "build:watch": "npm run build -- --watch --clean=false",
    "serve": "vite preview"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/Calendar.d.ts",
  "main": "./dist/Calendar.js",
  "dependencies": {
    "@headlessui/react": "1.2.0",
    "@heroicons/react": "1.0.1",
    "@types/throttle-debounce": "2.1.0",
    "classnames": "2.3.1",
    "constate": "3.2.0",
    "dayjs": "1.10.5",
    "reakit": "1.3.8",
    "throttle-debounce": "3.0.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "tsup": {
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "entryPoints": [
      "src/index.ts"
    ]
  },
  "devDependencies": {
    "@types/react": "17.0.9",
    "@types/react-dom": "17.0.6",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "@vitejs/plugin-react-refresh": "1.3.3",
    "autoprefixer": "10.2.6",
    "eslint": "7.28.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "ical.js": "1.4.0",
    "postcss": "8.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "2.1.4",
    "tsup": "4.11.2",
    "typescript": "4.3.2",
    "vite": "2.3.7"
  },
  "peerDependencies": {
    "react": ">= 17.0.2",
    "react-dom": ">= 17.0.2"
  }
}
