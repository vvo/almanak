{
  "name": "almanak",
  "version": "0.0.27",
  "description": "Advanced JavaScript calendar",
  "license": "MIT",
  "author": "Vincent Voyer <vincent@codeagain.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/index.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "style.css"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:src",
    "build:clean": "rimraf dist/",
    "build:src": "tsup src/index.tsx",
    "format": "prettier --write '**/*.*' && eslint . --ext ts,tsx --fix",
    "lint": "tsc --noEmit && eslint --ext ts,tsx src/ && prettier --check '**/*.*'",
    "prepublishOnly": "npm run build && cp dist/index.css style.css",
    "postpublish": "rm style.css",
    "test": "npm run lint && (cd example && npm install && npm run build)",
    "watch": "npm run build:clean && concurrently \"npm:watch:*\"",
    "watch:src": "tsup src/index.tsx --watch src/"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:tailwindcss/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": [
        "warn",
        {
          "ts-ignore": "allow-with-description"
        }
      ],
      "tailwindcss/no-custom-classname": "off"
    }
  },
  "dependencies": {
    "@headlessui/react": "1.4.2",
    "@heroicons/react": "1.0.5",
    "@types/luxon": "2.0.7",
    "classnames": "2.3.1",
    "luxon": "2.1.1",
    "reakit": "1.3.11"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "1.1.0",
    "@tsconfig/recommended": "1.0.1",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/throttle-debounce": "2.1.0",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "autoprefixer": "10.4.0",
    "concurrently": "6.4.0",
    "eslint": "8.3.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-tailwindcss": "1.17.2",
    "ical.js": "1.4.0",
    "postcss": "8.4.4",
    "prettier": "2.5.0",
    "prettier-plugin-packagejson": "2.2.15",
    "react": ">= 17.0.2",
    "react-dom": ">= 17.0.2",
    "rimraf": "3.0.2",
    "tailwindcss": "2.2.19",
    "tsup": "5.10.0",
    "typescript": "4.4.4"
  },
  "peerDependencies": {
    "react": ">= 17.0.2",
    "react-dom": ">= 17.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "renovate": {
    "extends": [
      "config:js-lib",
      ":automergePatch",
      ":automergeBranch",
      ":automergePatch",
      ":automergeBranch",
      ":automergeLinters",
      ":automergeTesters",
      ":automergeTypes"
    ],
    "timezone": "Europe/Paris",
    "schedule": [
      "before 3am on Monday"
    ]
  },
  "tsup": {
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
